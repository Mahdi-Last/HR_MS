<Window x:Class="HR_MS.MVVM.Views.Departments.AddEditDepartmentView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Title="Add / Edit Department"
        Height="400"
        Width="400"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="Department Information"
                   FontSize="22"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Content -->
        <StackPanel Grid.Row="1">

            <TextBlock Text="Department Name"
                       Style="{StaticResource FieldLabel}"/>

            <TextBox Style="{StaticResource RoundedTextBox}"
                     Text="{Binding Department.DepartmentName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Text="Description"
                       Style="{StaticResource FieldLabel}"
                       Margin="0,10,0,0"/>

            <TextBox Style="{StaticResource RoundedTextBox}"
                     Text="{Binding Department.Description, Mode=TwoWay}"
                     Height="100"
                     AcceptsReturn="True"/>

            <CheckBox Content="Active Department"
                      Margin="0,15,0,0"
                      IsChecked="{Binding Department.IsActive, Mode=TwoWay}"/>

        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">

            <!-- Save Button -->
            <Button Style="{StaticResource pagingButton}"
                    Width="100"
                    Margin="0,0,10,0"
                    Command="{Binding SaveCommand}">
                <StackPanel Orientation="Horizontal">
                    <icon:PackIconMaterial Kind="ContentSave"
                                           Width="16"
                                           Height="16"
                                           Margin="0,0,5,0"/>
                    <TextBlock Text="Save"/>
                </StackPanel>
            </Button>

            <!-- Cancel Button -->
            <Button Style="{StaticResource pagingButton}"
                    Width="100"
                    IsCancel="True"
                    Command="{Binding CloseCommand}">
                <StackPanel Orientation="Horizontal">
                    <icon:PackIconMaterial Kind="Close"
                                           Width="16"
                                           Height="16"
                                           Margin="0,0,5,0"/>
                    <TextBlock Text="Cancel"/>
                </StackPanel>
            </Button>

        </StackPanel>

    </Grid>
</Window>
